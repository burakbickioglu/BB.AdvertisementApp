@model List<AdvertisementListDto>
@{
    Layout = "_Layout";
}

   
<div class="container-fluid mx-auto w-75">

    @{
        if (@Model?.Count > 0)
        {
            <div class="text-center text-success mt-4"><h3>Yeni Başvurular</h3></div>
            
            <div class="text-end my-3 p-1"> 
                <a class="btn btn-success btn-sm text-white" asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a>
            </div>
            <table class="mt-3 table table-sm table-hover table-striped">
                <thead>
                <tr> 
                    <th>İlan Başlığı</th>
                    <th>Oluşturma Tarihi</th>
                    <th>İlan Durumu</th>
                    <th>İşlem</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var advertisement in Model)
                {
                    <tr class="mx-auto">
                        <td>@advertisement.Title</td> 
                        <td>@advertisement.CreatedDate.ToString("MM/dd/yyyy")</td>
                        <td>@(advertisement.Status?"Aktif":"Pasif")</td>
                        <td>
                            <a class="btn btn-info btn-sm text-white" asp-action="Update" asp-route-id="@advertisement.Id" asp-controller="Application">Güncelle</a>
                            |
                            <a class="btn btn-danger btn-sm text-white" asp-action="Remove" asp-route-id="@advertisement.Id" asp-controller="Application">Sil</a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>

        }
        else
        {
            <div class="text-end my-3 p-1">
                <a class="btn btn-success btn-sm text-white" asp-action="Create" asp-controller="Application">Yeni İlan Oluştur</a> |
            </div>
            <div class="mt-3 text-center lead">
                Herhangi bir ilan bulunmamaktadır.
            </div>
        }

    }
</div>
